{
  "name": "grok-ide",
  "version": "5.0.0",
  "description": "A Metal Gear Solid-inspired IDE with xAI Grok integration - Phase 5 Complete: Production-Ready with PWA, Docker, CI/CD",
  "main": "server-new.js",
  "scripts": {
    "start": "node server-new.js",
    "start:old": "node server.js",
    "dev": "nodemon server-new.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docker:build": "docker build -t grok-ide:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env grok-ide:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "security:audit": "npm audit --audit-level=moderate",
    "prepare": "husky install || true"
  },
  "keywords": [
    "ide",
    "grok",
    "xai",
    "metal-gear-solid",
    "code-editor",
    "ai-assistant"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "axios-retry": "^4.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
