# =============================================================================
# GROK IDE - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit the .env file to version control!

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development
# Options: development, production

# -----------------------------------------------------------------------------
# xAI API Configuration
# -----------------------------------------------------------------------------
XAI_API_KEY=your_xai_api_key_here
XAI_BASE_URL=https://api.x.ai/v1
XAI_TIMEOUT=120000
XAI_RETRIES=3

# AI Model Configuration
XAI_CHAT_MODEL=grok-4-0709
XAI_VISION_MODEL=grok-vision-beta
XAI_IMAGE_MODEL=grok-2-image

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_FILENAME=./grok_ide_chat_history.db
DB_VERBOSE=false

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed CORS origins (* for all)
CORS_ORIGINS=*

# Rate limiting (milliseconds)
RATE_LIMIT_WINDOW=900000
# 15 minutes = 900000ms

# Max requests per window
RATE_LIMIT_MAX=100

# Max request body size
MAX_REQUEST_SIZE=50mb

# -----------------------------------------------------------------------------
# AI Configuration
# -----------------------------------------------------------------------------
AI_DEFAULT_TEMPERATURE=0.7
AI_DEFAULT_MAX_TOKENS=8000
AI_STREAMING_ENABLED=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Development Server Configuration
# -----------------------------------------------------------------------------
DEV_SERVER_PORT=8080
PHP_SERVER_PORT=8081

# -----------------------------------------------------------------------------
# Optional: Skip Environment Variable Validation
# -----------------------------------------------------------------------------
# SKIP_ENV_VALIDATION=true
